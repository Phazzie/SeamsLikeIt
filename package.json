{
  "name": "seamslikeit",
  "version": "1.0.0",
  "description": "MCP server implementing Seam-Driven Development methodology for AI-assisted software creation",
  "main": "dist/index.js",
  "bin": {
    "seamslikeit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "http": "tsx src/http-server.ts",
    "http:secure": "tsx src/http-server-secure.ts",
    "http:prod": "node dist/http-server.js",
    "client": "vite",
    "client:build": "vite build",
    "dev:all": "concurrently \"npm run http:secure\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start:prod": "NODE_ENV=production node dist/http-server-secure.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "persistent": "./start-persistent.sh",
    "monitor": "./monitor.sh"
  },
  "keywords": [
    "mcp",
    "seam-driven-development",
    "seamslikeit",
    "ai",
    "code-generation"
  ],
  "author": "Phazzie Zee <phazziezee@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Phazzie/SeamsLikeIt.git"
  },
  "bugs": {
    "url": "https://github.com/Phazzie/SeamsLikeIt/issues"
  },
  "homepage": "https://github.com/Phazzie/SeamsLikeIt#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^5.8.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.5",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "postcss": "^8.4.49",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "vite": "^6.0.8"
  }
}
